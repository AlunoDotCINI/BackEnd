package br.com.school.educanet.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import br.com.school.educanet.entity.Usuario;
import br.com.school.educanet.repository.UserRepository;

@Service
public class UserService {
	@Autowired
	private UserRepository userRepository;
	
	public Usuario saveUser(Usuario Usuario) {
		return UserRepository.save(Usuario);
	}	
	public Usuario AlterarUsuario(Usuario Usuario) {
	if
	(UserRepository.findByEmail(Usuario.getUsuarioEmail()).isPresent()){
		throw new
		RuntimeException("Email Cadastrado");
	}
		
		return UserRepository.saveAndFlush(Usuario);
	}
	public void  ApgarUsuario(String UsuarioEmail ) {
		Usuario Usuario= UserRepository.findById(UsuarioEmail).get();
		UserRepository.delete(Usuario);
	}
}
